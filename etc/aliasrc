#!/bin/sh

[ "$USER" = "root" ] && alias doas=''
alias free='free -h'
alias rl='readlink'
alias exa='exa -F --icons --git --sort extension --group-directories-first'
alias a='exa -a'
alias aa='exa'
alias al='a -l'
alias ala='exa -l'
alias at='a -T'
alias ata='exa -T'
alias grep='grep --color'
alias lns='ln -s'
alias lnf='ln -f'
alias lnsf='ln -sf'
alias df='df -h'
alias su='doas -s'
alias xc='xclip -r -i -selection clipboard'
alias xp='xclip -r -o -selection clipboard'
alias sxc='doas xclip -r -i -selection clipboard'
alias sxp='doas xclip -r -o -selection clipboard'
